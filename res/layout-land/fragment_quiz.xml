<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_quiz_usa_flag_anim"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/light_blue"
    android:orientation="vertical" >

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1" >

        <ImageView
            android:id="@+id/image_president"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="25dp"
            android:layout_weight="1"
            android:scaleType="fitXY"
            android:src="#808080" />

        <ImageView
            android:id="@+id/image_x_or_v_answer"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="50dp"
            android:layout_weight="1"
            android:src="#808080" />
    </FrameLayout>

    <TextView
        android:id="@+id/text_question_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp"
        android:layout_marginLeft="12dp"
        android:text="TextView"
        android:textColor="#FFEFD5"
        android:textSize="25sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/next_imageButton"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:background="#FFFFE0"
        android:src="@drawable/arrow_right" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginBottom="25dp"
        android:paddingTop="20dp" >

        <ImageView
            android:id="@+id/image_list_layout_anim"
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/abc_ab_bottom_solid_light_holo" />

        <ImageView
            android:id="@+id/image_answer2"
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/abc_ab_bottom_solid_light_holo" />

        <ImageView
            android:id="@+id/image_answer3"
            android:layout_width="100dp"
            android:layout_height="125dp"
            android:layout_weight="1"
            android:clickable="true"
            android:scaleType="fitXY"
            android:src="@drawable/abc_ab_bottom_solid_light_holo" />

    </LinearLayout>

</LinearLayout>